@Library('shared-library') _
pipeline {
  agent any
  environment {
    PULUMI_ACCESS_TOKEN = credentials('pulumi-access-token')
  }
  stages {
    stage('verify tools') {
      steps {
        sh '''
           python3 --version
           pulumi version
        '''
      }
    }
    stage('up') {
      environment {
        PULUMI_STACK = getPulumiStack()
      }
      steps {
        sh '''
           pulumi stack select ${PULUMI_STACK}
           pulumi up --yes
        '''
      }
    }
  }
}